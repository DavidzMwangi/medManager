<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/ten"
            android:layout_height="wrap_content"
            >


            <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/ten"
                android:layout_height="wrap_content"
                android:hint="@string/search_for_a_product"
                android:padding="@dimen/five"
                android:id="@+id/medicine_query"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/search_medicine_button"
                android:layout_marginRight="@dimen/ten"

                android:background="@drawable/round_edittext_states"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:src="@drawable/ic_action_search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
                android:id="@+id/search_medicine_button"
              android:background="@color/colorAccent"
             />
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" -->
                <!--android:src="@drawable/ic_action_search_black"-->
                <!--android:background="@color/colorAccent"/>-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/active_recycler"
    android:background="#ffdedc">

</android.support.v7.widget.RecyclerView>
</LinearLayout>